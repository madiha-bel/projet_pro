{% extends 'base.html.twig' %}

{% block title %}Reponses index{% endblock %}

{% block body %}
    <h1>Reponses index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Correct_reponse</th>
                <th>Detail_reponse</th>
                <th>Reponse_candidat</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reponse in reponses %}
            <tr>
                <td>{{ reponse.id }}</td>
                <td>{{ reponse.correctReponse }}</td>
                <td>{{ reponse.detailReponse }}</td>
                <td>{{ reponse.reponseCandidat }}</td>
                <td>
                    <a href="{{ path('app_reponses_show', {'id': reponse.id}) }}">show</a>
                    <a href="{{ path('app_reponses_edit', {'id': reponse.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reponses_new') }}">Create new</a>
{% endblock %}
